// The format of this file is specified in https://probe.rs/docs/tools/debugger/#start-a-debug-session-with-minimum-configuration
{
  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "cargo build default-dev",
      "type": "probe-rs-debug",
      "request": "launch",
      "name": "rp2040-debug",
      "cwd": "${workspaceFolder}",
      "chip": "rp2040",
      "wireProtocol": "Swd",
      "connectUnderReset": false, // RP2040 does not support connect_under_reset
      "speed": 20000,
      "runtimeExecutable": "probe-rs",
      "runtimeArgs": ["dap-server"],
      "flashingConfig": {
        "flashingEnabled": true,
        "haltAfterReset": false
      },
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "target/thumbv6m-none-eabi/debug/pico_usb_serial_cli",
          "rttEnabled": true,
          "svdFile": "./.vscode/rp2040.svd"
        }
      ],
      "consoleLogLevel": "Console" //Console, Info, Debug
    },
    {
      "type": "probe-rs-debug",
      "request": "attach",
      "name": "rp2040-attach",
      "cwd": "${workspaceFolder}",
      "chip": "rp2040",
      "wireProtocol": "Swd",
      "connectUnderReset": false, // RP2040 does not support connect_under_reset
      "speed": 20000,
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "target/thumbv6m-none-eabi/debug/pico_usb_serial_cli",
          "rttEnabled": true,
          "svdFile": "./.vscode/rp2040.svd"
        }
      ],
      "consoleLogLevel": "Console" //Console, Info, Debug
    }
  ]
}
