{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build default-dev",
      "type": "shell",
      "command": "cargo",
      "args": ["build-d"],
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo build release",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release"],
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo run release",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },

    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "probe-rs - cargo run release",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--release"],
      "group": {
        "kind": "build"
      },
      "options": {
        "env": {
          "CARGO_TARGET_THUMBV6M_NONE_EABI_RUNNER": "probe-rs run --chip rp2040 --protocol swd"
        }
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "probe-rs - cargo run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "group": "build",
      "options": {
        "env": {
          "CARGO_TARGET_THUMBV6M_NONE_EABI_RUNNER": "probe-rs run --chip rp2040 --protocol swd"
        }
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "probe-rs - cargo run default-dev",
      "type": "shell",
      "command": "cargo",
      "args": ["run-d"],
      "group": {
        "kind": "build"
      },
      "options": {
        "env": {
          "CARGO_TARGET_THUMBV6M_NONE_EABI_RUNNER": "probe-rs run --chip rp2040 --protocol swd"
        }
      },
      "problemMatcher": ["$rustc"]
    }
  ]
}
